<html>
<head>
<title>Options</title>
<script type="text/javascript" src="define.js"></script>
<script type="text/javascript" src="jquery.js"></script>
<script type="text/javascript" src="jquery.iphone-switch.js"></script>
<script type="text/javascript">
function init() {
	document.body.style.display = "block";
  };
</script>
</head>
<style>


  body {
      padding: 0;
      margin: 0;
	  font-family: Helvetica, Arial, Tahoma, sans-serif;
	  width: 350px;
    }

    #container {
      position: relative;
    }

    #placeholder,
    #module {
      height: 420px;
    }

    #module {
      position: relative;
      top: 0;
      left: 0;
      border: 0;}

table {
border-spacing: 0px;
}
tr { }
span {
position: relative;
padding: 5px;
z-index: 100;
background: rgb(53, 53, 53);
color: #fff;
border-radius: 5px 5px;
-moz-border-radius: 5px;
-webkit-border-radius: 5px;
text-align: center;
text-indent: 0;
font: normal bold 10px/13px Tahoma,sans-serif;
white-space: nowrap;
box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.1);
-webkit-box-shadow: 2px 2px rgba(0, 0, 0, 0.1);
-moz-box-shadow: 2px 2px rgba(0, 0, 0, 0.1);
}
td {
height: 64px;
padding-right: 10px;
padding-bottom: 15px;
width: 64px;
align: center;
text-align: center;
border-spacing: 0px;
 }
h1{font-size:18px;}
</style>
<body onLoad="init();" background="img/fSMR.bg.jpg">
  <div id="container">
    <div id="placeholder">
	<h1>&nbsp;Troll Emoticons Settings</h1>
	<div id="ajax" style="margin-bottom:-15px;"><p id="marketingtxt">&nbsp;disable anonymous marketing:</p></div>
	<div class="left" id="1"></div>
	  <div class="clear"></div>
	<script type="text/javascript">
	Date.prototype.getMonthFormatted = function() {
	    var month = (this.getMonth()+1);
	    return month < 10 ? '0' + month : month; // ('' + month) for string result
	}
	Date.prototype.getDayFormatted = function() {
	    var month = this.getDay();
	    return month < 10 ? '0' + month : month; // ('' + month) for string result
	}
	console.log("marketing stting is:"+localStorage.getItem(pluginNamespace+".marketing"));
	var current_state = "on";
	if (localStorage.getItem(pluginNamespace+".marketing") == "false")
	{
		current_state = "off";
		$('#marketingtxt').text('Ads are disabled');
	}
	console.log("switch is stting is:"+current_state);
	$('#1').iphoneSwitch(current_state, 
		function() {
			console.log("marketing stting was:"+localStorage.getItem(pluginNamespace+".marketing"));
			$('#marketingtxt').text("Ads are currently enabled");
			localStorage.setItem(pluginNamespace+'.marketing',true);
			console.log("marketing stting now is:"+localStorage.getItem(pluginNamespace+".marketing"));
		},
		function() {
			console.log("marketing stting was is:"+localStorage.getItem(pluginNamespace+".marketing"));
			$('#marketingtxt').text('Ads disabled for 72 hours');
			localStorage.setItem(pluginNamespace+'.marketing',false);
	        var currentdate = new Date();
	        var currentdatefixed = currentdate.getFullYear() +"-"+ currentdate.getMonthFormatted()+"-"+currentdate.getDate();
	        localStorage.setItem(pluginNamespace+'.disableperiod',currentdatefixed);
			console.log("disabledate set to"+currentdatefixed);
			console.log("marketing stting now is:"+localStorage.getItem(pluginNamespace+".marketing"));
			
		},
	{
		switch_on_container_path: 'iphone_switch_container_off.png'
	});
	</script>
	</div>

    </div>
  </div>
</body>
</html>